<% layout('layouts/boilerplate') %>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta http-equiv="X-UA-Compatible" content="ie=edge" />
		<link
			rel="stylesheet"
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css"
			integrity="sha256-mmgLkCYLUQbXn0B1SRqzHar6dCnv9oZFPEC1g1cwlkk="
			crossorigin="anonymous"
		/>
		<link rel="stylesheet" href="/css/style.css" />
		<title>ChatBox</title>
	</head>
	<body>
		<div class="join-container">
			<header class="join-header">
				<h1><i class="fas fa-sms"></i> ChatBox</h1>
			</header>
			<% if(currentUser){%>
			<main class="join-main">
				<form action="/chatroom">
					<div class="form-control">
						<label for="username">Username</label>
							<% if(!currentUser.isstudent) {%>
								<input
								type="text"
								name="username"
								id="username"
								value = "<%= currentUser.collegename %>"
								required
							/>
							<% } else { %>
							<input
									type="text"
									name="username"
									id="username"
									value = "<%= currentUser.firstname %>"
									required
								/>
							<% } %>
						</div>
						<div class="form-control">
							<label for="room">Room</label>
							<select name="room" id="room">
								<% if(currentUser.isstudent) {%>
									<option value="<%= currentUser.acollegename %>"><%= currentUser.acollegename %></option>
								<% } else { %>
									<option value="<%= currentUser.collegename %>"><%= currentUser.collegename %></option>
								<% } %>
							</select>
						</div>
						<button type="submit" class="btn">Join Chat</button>
					</form>
				</main>
			<% } %>
		</div>
	</body>
