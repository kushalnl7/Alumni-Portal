<% layout('layouts/boilerplate') %>
<head>
    <title>Profile</title>
    <link rel="stylesheet" type="text/css" href="/css/home.css"></link>
  </head>
<body>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-8 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25"> <img src="//img.icons8.com/fluent/96/000000/test-account.png" class="img-radius" alt="User-Profile-Image"> </div>
                                    <% if (alumnilogin) {%>
                                    <h6 class="f-w-600"><%=alumni.firstname%></h6>
                                    <p><%=alumni.acollegename%></p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                                    <% } else {%>
                                        <h6 class="f-w-600"><%=alumni.collegename%></h6>
                                    <% }%>  
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <% if (editprofile) { %>
                                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Your Information</h6>
                                    <% } %>
                                    <%if (alumni.verified) { %>
                                        <h5 class="text-success" >Verified</h5>
                                    <% } else if (!alumni.verified && alumnilogin){%>
                                        <h5 class="text-danger">Not-Verified</h5>
                                    <% } %>
                                    <% if (alumnilogin) {%>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Email</p>
                                            <h6 class="text-muted f-w-400"><%=alumni.email%></h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Phone</p>
                                            <h6 class="text-muted f-w-400"><%=alumni.contact%></h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Gender</p>
                                            <h6 class="text-muted f-w-400"><%=alumni.gender%></h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Degree</p>
                                            <h6 class="text-muted f-w-400"><%=alumni.degree%></h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Branch</p>
                                            <h6 class="text-muted f-w-400"><%=alumni.branch%></h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Year of Graduation</p>
                                            <h6 class="text-muted f-w-400"><%=alumni.yearofpassing%></h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Current-Location</p>
                                            <h6 class="text-muted f-w-400"><%=alumni.currentlocation%></h6>
                                        </div>
                                        <div class="col-sm-6">
                                            <p class="m-b-10 f-w-600">Current Position</p>
                                            <h6 class="text-muted f-w-400"><%=alumni.currentworking%></h6>
                                        </div>
                                    </div>
                                <% } else { %>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Email</p>
                                                <h6 class="text-muted f-w-400"><%=alumni.collegeemail%></h6>
                                            </div>
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Phone</p>
                                                <h6 class="text-muted f-w-400"><%=alumni.ccontact%></h6>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <p class="m-b-10 f-w-600">Current-Location</p>
                                                <h6 class="text-muted f-w-400"><%=alumni.clocation%></h6>
                                            </div>
                                        </div>
                                    <% } %>
                                    <ul class="social-link list-unstyled m-t-40 m-b-10">
                                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="Facebook" ><img src="https://img.icons8.com/material/38/000000/facebook-new.png"/></a></li>
                                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="Twitter" ><img src="https://img.icons8.com/ios-glyphs/38/000000/twitter.png"/></a></li>
                                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="LinkedIn" ><img src="https://img.icons8.com/ios-glyphs/40/000000/linkedin.png"/> </a></li>
                                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="Google Plus" ><img src="https://img.icons8.com/material/40/000000/google-plus--v1.png"/> </a></li>                                    
                                    </ul>
                                    <% if (editprofile) { %> 
                                    <div class="row">
                                        <div class="col-sm-5">
                                            
                                        </div>
                                        <form method ="GET">
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <a href = "/editprofile"> <button type="button" class="btn btn-dark">Edit Profile</button></a>
                                            </div>
                                            <div class="col" >
                                                <a href = "/deleteaccount"><button type="button" class="btn btn-danger">Delete Account</button></a>
                                            </div>
                                            
                                        </div>
                                    </form>
                                    </div>
                                    <% } %>

                                    <% if (profile) { %> 
                                        <div class="row">
                                            <div class="col-sm-6">
                                                <a href = "/invaliduser/<%= alumni._id %>"> <button type="button" class="btn btn-danger">Mark as Invalid</button></a>
                                            </div>

                                                <div class="col" >
                                                    <a href = "/verifyaccount/<%= alumni._id %>"><button type="button" class="btn btn-success">Verify Profile</button></a>
                                                </div>
                                                
                                            </div>
                                    <% } %>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>